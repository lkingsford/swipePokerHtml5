{
  "name": "SwipePoker",
  "version": "1.3.0",
  "description": "Swipe Poker - the Swiping Poker Puzzle Game, by Lachlan Kingsford.",
  "scripts": {
    "test": "cross-env TS_NODE_FILES=true mocha --exit --require ts-node/register --colors test/**/*.ts",
    "start": "webpack-dev-server --mode development --config webpack.config.dev.js",
    "build": "webpack --mode development --config webpack.config.dev.js",
    "build_prod": "webpack --mode production --config webpack.config.prod.js",
    "build_scripts": "npx tsc -p scripts",
    "build_win": "npx tsc; npx electron-builder -c electron-builder.json",
    "build_linux": "npx tsc; npx electron-builder -c electron-builder.json -l",
    "build_mac": "npx tsc; npx electron-builder -c electron-builder.json -m",
    "publish": "npm run-script build_prod; node utils/push-butler.js game",
    "publish_win": "npm run-script build_win; node utils/push-butler.js win",
    "publish_linux": "npm run-script build_linux; node utils/push-butler.js linux",
    "publish_mac": "npm run-script build_mac; node utils/push-butler.js mac",
    "postinstall": "npm run-script build_scripts; node utils/get-butler.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/adm-zip": "^0.4.33",
    "@types/chai": "^4.2.11",
    "@types/data-driven": "0.0.30",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@types/pixi.js": "^5.0.0",
    "@types/urllib": "^2.33.0",
    "adm-zip": "^0.4.16",
    "chai": "^4.2.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.2",
    "cross-env": "^7.0.2",
    "data-driven": "^1.4.0",
    "electron": "^9.4.0",
    "electron-packager": "^14.2.1",
    "html-webpack-plugin": "^4.3.0",
    "mocha": "^8.0.1",
    "terser-webpack-plugin": "^3.0.6",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tslint": "^6.1.2",
    "typescript": "^3.9.5",
    "urllib": "^2.36.1",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "nan": "^2.14.1",
    "pixi-sound": "^3.0.4",
    "pixi.js": "^5.3.0"
  }
}
