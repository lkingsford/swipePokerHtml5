{
    "appId": "nerdygentleman.swipe.poker",
    "mac": {
        "category": "public.app-category.card-games",
        "icon": "Icon.png"
    },
    "win": {
        "target": "portable",
        "icon": "Icon.ico"
    },
    "directories": {
        "output": "dist-desktop",
        "buildResources": "./build/build"
    },
    "files": [
        "./dist-tsc/desktop-client/*",
        "./dist-tsc/game/**/*",
        {
            "from": "build/assets",
            "to": "app/assets"
        },
        {
            "from": "build/electron",
            "to": "app"
        }
    ],
    "extraMetadata": {
        "main": "dist-tsc/desktop-client/index.js"
    },
    "asar": true
}